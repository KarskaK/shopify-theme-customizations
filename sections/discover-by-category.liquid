{% comment %}
  Discover by category – 6 kafelków
  - Nagłówek u góry
  - 6 kafli: zdjęcie + tytuł
  - Desktop: 6 w jednym rzędzie
  - Mobile / tablet: siatka 3 x 2
{% endcomment %}

<section class="bt-cats" id="bt-cats-{{ section.id }}">
  <div class="bt-cats__inner">
    {% if section.settings.heading != blank %}
      <h2 class="bt-cats__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="bt-cats__grid">
        {% for block in section.blocks %}
          {% assign title = block.settings.title | default: 'Category' %}
          {% assign title_escaped = title | escape %}
          {% assign link  = block.settings.link %}

          <div class="bt-cats__item" {{ block.shopify_attributes }}>
            {% if link != blank %}
              <a href="{{ link }}" class="bt-cats__link">
            {% else %}
              <div class="bt-cats__link" role="link" tabindex="0">
            {% endif %}

              <div class="bt-cats__media">
                {% if block.settings.image != blank %}
                  {{
                    block.settings.image
                    | image_url: width: 1200
                    | image_tag:
                      loading: 'lazy',
                      class: 'bt-cats__image',
                      alt: title_escaped
                  }}
                {% else %}
                  {{ 'collection-1' | placeholder_svg_tag: 'bt-cats__image bt-cats__image--placeholder' }}
                {% endif %}

                <div class="bt-cats__overlay"></div>

                <div class="bt-cats__title-wrap">
                  <span class="bt-cats__title">{{ title }}</span>
                </div>
              </div>

            {% if link != blank %}
              </a>
            {% else %}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

<style>
  #bt-cats-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | default: 140 }}px;
    padding-bottom: {{ section.settings.padding_bottom | default: 80 }}px;
  }

  #bt-cats-{{ section.id }} .bt-cats__inner {
    max-width: var(--page-width);
    padding-left: var(--page-width-padding);
    padding-right: var(--page-width-padding);
    margin: 0 auto;
  }

  #bt-cats-{{ section.id }} .bt-cats__heading {
    font-size: 40px;
    line-height: 1.3;
    font-weight: 400;
    margin: 0 0 28px;
    color: #1f1f1f;
    padding-left: 50px;
    padding-bottom: 50px;
  }

  /* Desktop: 6 kafelków w rzędzie */
  #bt-cats-{{ section.id }} .bt-cats__grid {
    display: grid;
    grid-template-columns: repeat(6, minmax(0, 1fr));
    gap: 0.5rem;
  }

  #bt-cats-{{ section.id }} .bt-cats__item {
    position: relative;
    overflow: hidden;
    color: inherit;
  }

  #bt-cats-{{ section.id }} .bt-cats__link {
    display: block;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  #bt-cats-{{ section.id }} .bt-cats__media {
    position: relative;
    width: 100%;
    aspect-ratio: 3 / 4;
    overflow: hidden;
  }

  #bt-cats-{{ section.id }} .bt-cats__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }

  #bt-cats-{{ section.id }} .bt-cats__item:hover .bt-cats__image {
    transform: scale(1.03);
  }

  #bt-cats-{{ section.id }} .bt-cats__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.55), rgba(0,0,0,0));
    z-index: 1;
  }

  #bt-cats-{{ section.id }} .bt-cats__title-wrap {
    position: absolute;
    left: 1.5rem;
    top: 1.5rem;
    z-index: 2;
  }

  #bt-cats-{{ section.id }} .bt-cats__title {
    font-size: 20px;
    line-height: 1.3;
    font-weight: 600;
    color: #ffffff;
  }

  /* TABLET */
  @media (max-width: 1024px) {
    #bt-cats-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_mobile | default: 56 }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile | default: 56 }}px;
    }

    #bt-cats-{{ section.id }} .bt-cats__inner {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    #bt-cats-{{ section.id }} .bt-cats__heading {
      font-size: 24px;
      margin-bottom: 22px;
      padding-left: 0;
      padding-bottom: 0;
    }

    /* Tablet: 3 kolumny */
    #bt-cats-{{ section.id }} .bt-cats__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 0.5rem;
    }

    #bt-cats-{{ section.id }} .bt-cats__title {
      font-size: 18px;
    }
  }

  /* TELEFONY: dalej 3 x 2 (bo max 6 kafli) */
  @media (max-width: 640px) {
    #bt-cats-{{ section.id }} .bt-cats__inner {
      padding-left: 1.25rem;
      padding-right: 1.25rem;
    }

    #bt-cats-{{ section.id }} .bt-cats__heading {
      font-size: 22px;
    }

    #bt-cats-{{ section.id }} .bt-cats__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 0.5rem;
    }

    #bt-cats-{{ section.id }} .bt-cats__title {
      font-size: 16px;
    }
  }
</style>

