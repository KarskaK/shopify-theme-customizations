      "label": "Heading",
      "default": "Discover by category"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top (desktop)",
      "min": 0,
      "max": 200,
      "step": 8,
      "default": 144,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom (desktop)",
      "min": 0,
      "max": 200,
      "step": 8,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Padding top (mobile/tablet)",
      "min": 0,
      "max": 200,
      "step": 8,
      "default": 56,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Padding bottom (mobile/tablet)",
      "min": 0,
      "max": 200,
      "step": 8,
      "default": 56,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category tile",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Skin Care"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Discover by category",
      "category": "Custom"
    }
  ]
}
{% endschema %}

